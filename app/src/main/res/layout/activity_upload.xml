<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
         app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
             android:background="@drawable/border"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Domestic Violence Post"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="@color/purple_200"
                android:fontFamily="cursive"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/upload_icon"
                android:id="@+id/uploadImage"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/upload_name"
                android:background="@drawable/border"
                android:inputType="text"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Your Name"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:gravity="start|center_vertical"
                android:textColor="@color/purple_200"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/upload_address"
                android:background="@drawable/border"
                android:inputType="text"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Your Address"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:gravity="start|center_vertical"
                android:textColor="@color/purple_200"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/upload_contact"
                android:background="@drawable/border"
                android:inputType="textEmailAddress"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Your Phone Number"
                android:drawableLeft="@drawable/contact"
                android:gravity="start|center_vertical"
                android:textColor="@color/purple_200"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/upload_description"
                android:background="@drawable/border"
                android:inputType="text"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Enter Everything About Abuse"
                android:gravity="start|center_vertical"
                android:textColor="@color/purple_200"
                />
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="Post Anonymously"
                android:textColor="@color/purple_500"
                android:id="@+id/anonymous_post"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:textAllCaps="false"
                android:id="@+id/upload_save"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>